{{#each itemList}}

  <div class='card mt-3'>
    <div class='card-body'>
      <div class='row'>
        <div class='col-4'>
          <p>{{number}}</p>
          <h5>{{status}}</h5>

        </div>

        <div class='col-2'>
          {{#with amount}}

            <p>{{title}}</p>
            <h4>
              {{value}}
            </h4>

          {{/with}}
        </div>
        <div class='col-4'>
          {{#each images}}
            <img
              src='{{this}}'
              alt='images'
              weight='70'
              height='70'
            />
          {{/each}}

        </div>
        <div class='col-2'>
          {{#with button}}
            <a
              class='btn btn-primary'
              href='{{link}}'
            >{{text}}</a>
          {{/with}}
        </div>

      </div>

    </div>
  </div>

{{/each}}