<main>
  <div>
    {{#with navigation}}
      <div class='card'>
        <div class='card-body'>

          <div class='nav'>

            {{#each links}}
              <div class='nav-item'>
                <a href='{{href}}' class='nav-link'>
                  {{text}}</a>
              </div>
            {{/each}}
            <a href='{{href}}' class='nav-link disabled'>
              Disabled</a>

          </div>

        </div>
      </div>
    {{/with}}

  </div>
  <div class='mt-5'>

    <ul class='breadcrumb'>
      {{#each breadcrumb}}
        {{#if url}}
          <li class='breadcrumb-item'>
            <a href='{{url}}'>{{name}}</a>
          </li>

        {{else}}

          <li class='breadcrumb-item'>
            {{name}}
          </li>{{/if}}

      {{/each}}
    </ul>

  </div>
  <div>
    <h1 class='mt-4'>{{header}}</h1>
  </div>
  <div>

    <div class='row mt-4'>
      {{#each sortBlock}}
        <div class='col-4'>

          <select class='form-select form-select-sm'>

            <option selected>{{placeholder}}</option>
            {{#each options}}
              <option value='{{value}}'>{{text}}</option>
            {{/each}}

          </select>

        </div>
      {{/each}}
    </div>

    <div class='row mt-5'>
      {{#with filterBlock}}
        <div class='col-4'>
          <div class='card'>
            <div clas='card-body'>
              {{#with sellers}}
                <label
                  class='form-check-label mb-2 ms-2'
                >{{title}}</label>
                {{#each list}}
                  <div class='form-check ms-2'>

                    <label
                      class='form-check-label'
                    >{{value}}</label>

                    <input
                      type='checkbox'
                      class='form-check-input'
                    />
                  </div>
                {{/each}}
              {{/with}}
              <hr class='my-2' />
              {{#with brands}}
                <label class='form-check-label my-2 ms-2'>
                  {{title}}</label>
                <div class='mx-3 mb-3'>
                  {{#with input}}
                    <input
                      class='form-control'
                      placeholder='{{placeholder}}'
                    />
                  {{/with}}
                </div>
                {{#each options}}
                  <div class='form-check ms-3'>

                    <label
                      class='form-check-label'
                    >{{value}}</label>

                    <input
                      type='checkbox'
                      class='form-check-input'
                    />
                  </div>
                {{/each}}
              {{/with}}
              <hr class='my-2' />
              {{#with price}}
                <label class='form-check-label my-2 ms-2'>
                  {{title}}</label>
                <div class='mx-3 mb-3'>
                  {{#with range}}
                    <input
                      class='form-control mb-3'
                      placeholder='{{from}}'
                    />
                    <input
                      class='form-control mb-3'
                      placeholder='{{to}}'
                    />
                  {{/with}}
                </div>
                {{#with button}}
                  <a
                    class='btn btn-outline-secondary ms-3'
                    href='link'
                  >{{text}}</a>
                {{/with}}

              {{/with}}
              <hr class='my-2' />

              {{#each filterList}}
                <label class='form-check-label my-2 ms-2'>
                  {{title}}</label>
                {{#each options}}
                  <div class='form-check ms-2'>

                    <label
                      class='form-check-label'
                    >{{value}}</label>

                    <input
                      type='checkbox'
                      class='form-check-input'
                    />
                  </div>
                {{/each}}
                <hr />
              {{/each}}

            </div>
          </div>
        </div>
      {{/with}}

      <div class='col-8'>

        <div class='row'>
          {{#each goodsList}}
            <div class='col-6'>
              <div class='card'>
                <div class='card-body'>
                  <img class='card-img-top' src='{{img}}' />
                  <div class='card-title'>
                    {{#if isHot}}
                      <div
                        class='badge text-bg-warning text-uppercase rounded-pill mt-2'
                      >hot</div>
                    {{/if}}
                    {{#if isNew}}
                      <div
                        class='badge text-bg-primary text-capitalize rounded-pill mt-2'
                      >new</div>
                    {{/if}}
                    {{#if isFast}}
                      <br />
                      <a
                        href='#'
                        class='btn btn-success my-1'
                      >Fast delivery</a>

                    {{/if}}
                    {{#if isFree}}
                      <br />
                      <a
                        href='#'
                        class='btn btn-secondary my-1'
                      >Free delivery</a>
                    {{/if}}
                    <h6 class='mt-3'>{{name}}</h6>
                    <p>
                      {{#with review}}
                        {{amount}}
                        {{text}}
                      {{/with}}
                    </p>
                  </div>
                  <h4>{{price}}</h4>
                  <p>{{delivery}}</p>
                  {{#each buttons}}
                    {{#if isPrimary}}
                      <a
                        class='btn btn-primary'
                        href='{{link}}'
                      >{{text}}</a>
                    {{/if}}
                    <br />
                    {{#if isSecondary}}
                      <a
                        class='btn btn-secondary'
                        href='{{link}}'
                      >{{text}}</a>
                    {{/if}}
                  {{/each}}
                  {{#each characteristics}}
                    <ul class='mt-2'>
                      <li> {{title}}: {{value}}</li>
                    </ul>
                  {{/each}}
                </div>
              </div>
            </div>
          {{/each}}
        </div>

      </div>

    </div></div>

  <div class='card mt-5'>
    <div class='card-body text-bg-success text-center'>
      {{#with service}}
        <h2>{{title}}</h2>
        <p> {{description}}</p>
        {{#each buttons}}
          <a
            class='btn btn-primary'
            href='{{link}}'
          >{{text}}</a>
        {{/each}}
      {{/with}}
    </div>

  </div>
  <hr class='my-5' />
  <footer>

    <div class='nav nav-tabs'>
      {{#each footer}}
        <div class='nav-item'>
          {{#each this}}
            <a href='{{link}}' class='nav-link'>
              {{text}}</a>
          {{/each}}
          <a href='{{link}}' class='nav-link disabled'>
            Disabled</a>

        </div>
      {{/each}}

    </div>

  </footer>
</main>