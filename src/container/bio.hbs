<div>
 <main>
    <h1 class="text-center">{{name}} </h1>
     
    <em class="my-3">{{> title data="BIO" big=true }}</em>
    <div>
        
        
        <div class="card">
          <div class="card-body ">
            
            
             Birthdate: {{birthdate}} <br>
              Birthplace: {{birthplace}} <br>
              Deathdate: {{deathdate}} <br>
              Deathplace: {{deathplace}} <br>
              Nationality: {{nationality}} <br>
              Occupation: {{occupation}} <br>
               Known for: {{known_for}}
          
             
            </div>       
          </div>
                
            <h3 class="my-2">Education:</h3>
            {{#each education}}
            <div class="card">
              <div class="card-body">
                 <ul>
                <li>Degree: {{degree}}</li>
                <li>Field: {{field}}</li>
                <li>Institution: {{institution}}</li>
                <li>Year: {{year}}</li>
                </ul>
              </div>
            </div>
           
            
            {{/each}}
            
            <div>
               <h3 class="my-3">Notable publications:</h3>
                
              {{#each notable_publications}}
              <div class="card my-2">
                <div class="card-body">
                  <ul><li> Title: <em>{{title}}</em> <br>
                Year: <em>{{year}}</em> <br>
                Publisher: <em>{{publisher}}</em> <br></li></ul>
                </div>
              </div>
              
               

              {{/each}}  

            </div>

           
            <div>
               <h3>Partners:</h3>
                
              {{#each partners}}
              <div class="card my-2">
                <div class="card-body">
                  <ul><li> Name: <em>{{name}}</em> <br>
                Relationship: <em>{{relationship}}</em> <br>
                Years: <em>{{years}}</em> <br></li></ul>
                </div>
              </div>
              
               

              {{/each}}  

            </div>
            
            <div>
               <h3>Awards:</h3>
                
              {{#each awards}}
              <div class="card">
                <div class="card-body">
                  <ul><li> Title: <em>{{title}}</em> <br>
                Year: <em>{{year}}</em> <br>
                Description: <em>{{description}}</em> <br></li></ul>
               
                </div>
              </div>
              

              {{/each}}  

            </div>
            <div>
               <h3>Influences:</h3>
                
             <ul><li>{{influences}}</li></ul> 
              

            </div>
            <div>
               <h3>Influenced:</h3>
                
             <ul><li>{{influenced}}</li></ul> 
              

            </div>
             <div>
               <h3>Quotes:</h3>
                
             <ul><li>{{quotes}}</li></ul> 
              

            </div>
             <div>
               <h3>Major discoveries:</h3>
                {{#each major_discoveries}}
                  <ul><li>
                    Title: {{title}} <br>
                   Year: {{year}} <br>
                   Description: {{description}} <br>
                   </li></ul> 
                {{/each}}
        
                      

            </div>
            <div>
               <h3>Contributions:</h3>
                {{#with contributions}}
                  <ul><li>
                    Title: {{title}} <br>
                   Year: {{year}} <br>
                   Description: {{description}} <br>
                   Field: {{field}} <br>
                   </li></ul> 
                {{/with}}
        
                      

            </div>
      </div> 
    </div>
    
        
  </main>
 
</div>