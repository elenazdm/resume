<main>
  <div>
    {{#with navigation}}
      <div class='card'>
        <div class='card-body'>

          <div class='nav'>

            {{#each links}}
              <div class='nav-item'>
                <a href='{{href}}' class='nav-link'>
                  {{text}}</a>
              </div>
            {{/each}}
            <a href='{{href}}' class='nav-link disabled'>
              Disabled</a>

          </div>

        </div>
      </div>
    {{/with}}

  </div>
  {{#with formBlock}}
  <div class='row mt-5'>
    <div class='col-8'>
      
        <h1>{{header}}</h1>
        {{#with rating}}
          <p class='me-2'>{{title}}: {{value}}</p>
        {{/with}}
        {{#with actionBlock}}
          <div class='nav nav-tabs'>
            {{#each tabs}}
              <div class='nav-item'>
                <a href='#' {{#if isActive}} class='nav-link active' {{else}} class='nav-link' {{/if}}>{{text}}</a>
              </div>

            {{/each}}
            
          </div>
          <hr class="my-5">
          <div class="card">
            <div class="card-body">
               {{#with report}}
                    <p>{{title}}</p>
                    {{#with button}}
                    <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                    {{/with}}
                {{/with}} 
            </div>
            
          </div>
        {{/with}}
        <hr class="my-5">
        

        {{#with feedbackBlock}}
       
                <h2>{{title}}</h2>
                <div class="mt-5">
                    {{#each buttons}}

                    {{#if isWarning}}
                    <a class="btn btn-warning mx-2" href="{{link}}">{{text}}</a>
                    {{/if}}
                    {{#if isSuccess}}
                    <a class="btn btn-success mx-2" href="{{link}}">{{text}}</a>
                    {{/if}}
                    {{#if isDanger}}
                    <a class="btn btn-danger mx-2" href="{{link}}">{{text}}</a>
                    {{/if}}
                    {{/each}}
                </div>
                

          

        
        {{/with}}
      
      
     

     

    </div>
    <div class='col-4'>
        {{#with goodsInfo}}
            <div class="card mb-3">
                <div class="card-body ">
                    
                    
                    <img src="{{photo}}"> <br>

                    <h5 class="mt-3" >{{name}}</h5>
                    
        
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h5>{{price}}</h5>
                    <p class="mb-1">
                        {{#if inMarket}}
                    Є в наявності
                    {{/if}}
                    </p>
                    
                    {{#each buttons}}
                        {{#if isPrimary}}
                            <a class="btn btn-primary me-5 mb-2" href="{{link}}">{{text}}</a>
                        {{/if}}
                        
                        {{#if isSecondary}}
                            <a class="btn btn-secondary" href="{{link}}">{{text}}</a>
                        {{/if}}
                    {{/each}}


                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    {{#with seller}}
                    <p>{{title}}: <b>{{value}}</b></p>
                    {{/with}}
                </div>
            </div>
            
        {{/with}}
    </div>
  </div>
   {{/with}}
   <hr class="my-5">
 {{> reviewItem}}
  


 {{#with service}}
 <div class="card mt-5">
    <div class="card-body text-bg-success text-center">
       
        <h2>{{title}}</h2>
        <p class="my-3">{{description}}</p>
        {{#each buttons}}
         <a class="btn btn-primary" href="{{link}}">{{text}}</a>
        {{/each}}
        
    </div>
 </div>
 {{/with}}
 <hr class="mt-5">
  <div class='nav nav-tabs'>
    {{#each footer}}
      <div class='nav-item'>
        {{#each this}}
          <a class='nav-link' href='{{link}}'>{{text}}</a>
        {{/each}}
        <a
          class='nav-link disabled'
          href='{{link}}'
        >Disabled</a>
      </div>

    {{/each}}

  </div>

</main>